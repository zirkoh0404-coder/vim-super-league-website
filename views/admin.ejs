<%- include('partials/navbar') %>
<main class="py-20 px-6 max-w-7xl mx-auto space-y-10">
    <h2 class="text-5xl font-black italic uppercase tracking-tighter">ADMIN <span class="text-blue-500">DASHBOARD</span></h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="glass p-8 rounded-[30px] space-y-8">
            <form action="/admin/live" method="POST" class="space-y-4">
                <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest">Live Stream Link</h3>
                <input name="link" placeholder="YouTube Link" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl outline-none">
                <button class="w-full bg-blue-600 py-4 rounded-2xl font-bold uppercase text-xs">Update Live</button>
            </form>

            <form action="/admin/add-match" method="POST" class="space-y-4">
                <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest">Schedule Match</h3>
                <div class="grid grid-cols-2 gap-4">
                    <input name="teamA" placeholder="Team 1 Name" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none">
                    <input name="logoA" placeholder="Team 1 Logo URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none">
                    <input name="teamB" placeholder="Team 2 Name" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none">
                    <input name="logoB" placeholder="Team 2 Logo URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none">
                </div>
                <input name="time" placeholder="Match Time (e.g. 7:00 PM)" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl outline-none">
                <button class="w-full bg-white text-black py-4 rounded-2xl font-bold uppercase text-xs">Post Match</button>
            </form>
        </div>

        <div class="glass p-8 rounded-[30px]">
            <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest mb-6">Remove Players</h3>
            <div class="space-y-4 max-h-[400px] overflow-y-auto pr-2">
                <% players.forEach(p => { %>
                    <div class="flex justify-between items-center bg-white/5 p-4 rounded-2xl">
                        <span class="font-bold text-sm uppercase"><%= p.name %></span>
                        <form action="/admin/delete-player" method="POST">
                            <input type="hidden" name="playerId" value="<%= p.id %>">
                            <button class="text-red-500 font-bold text-[10px] uppercase">Remove</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</main>
